<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ehealthhistory">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_image_trans_small"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_image_trans_original"
        android:supportsRtl="true"
        android:theme="@style/Theme.EHealthHistory"
        android:fullBackupContent="@xml/backup_descriptor">

        <!-- Aqui ponemos la actividad principal -->
        <activity android:name=".ui.PantallaPrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Aqui las demas actividades -->
        <activity android:name=".ui.login.MainLogIn"/>
        <activity android:name=".ui.MainRoles"/>
            <activity android:name=".ui.Foootballer.MainFootballer"/>
                    <activity android:name=".ui.Foootballer.UIFootballerContact"/>
                    <activity android:name=".ui.Foootballer.UIFootballerHealthCares"/>
                    <activity android:name=".ui.Foootballer.UIFootballerFavsCareTeams"/>

            <activity android:name=".ui.CareTeam.MainCareTeam"/>
                <activity android:name=".ui.HealthCareService.MainHealthCareService"/>

            <activity android:name=".ui.Club.MainClub"/>
                <activity android:name=".ui.Club.UIAddNewCareTeam"/>
    </application>


</manifest>