<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Club.MainClub">

    <include
        android:id="@+id/include"
        layout="@layout/activity_base"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/border_footballer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubName"
                        android:padding="3dp"
                        android:text="@string/clubName_textView" />

                    <TextView
                        android:id="@+id/clubName"
                        android:gravity="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubPresident"
                        android:padding="3dp"
                        android:text="@string/clubPresident_textView" />

                    <TextView
                        android:id="@+id/clubPresident"
                        android:gravity="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubAlias"
                        android:padding="3dp"
                        android:text="@string/clubAlias_textView" />

                    <TextView
                        android:id="@+id/clubAlias"
                        android:gravity="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubContact"
                        android:padding="3dp"
                        android:text="@string/clubContact_textView" />

                    <TextView
                        android:id="@+id/clubContact"
                        android:gravity="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubTeamCare"
                        android:padding="3dp"
                        android:text="@string/clubTeamCare_textView" />

                    <TextView
                        android:id="@+id/clubTeamCare"
                        android:gravity="center" />

                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >


                    <Button
                        android:id="@+id/buttonNewTeamCare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/clubNewTeamCare_textView" />
                </TableRow>
            </TableLayout>


            <TableLayout
                android:layout_marginTop="30dp"
                android:background="@drawable/border_footballer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubFootballers"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="@string/clubFootballers_textView" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_marginTop="0dp"
                android:id="@+id/TableClubFootballers"
                android:background="@drawable/border_footballer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewClubFootballerName"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="@string/clubFootballerName_textView" />
                    <TextView
                        android:id="@+id/TextViewClubFootballerActive"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="@string/clubFootballerActive_textView" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>