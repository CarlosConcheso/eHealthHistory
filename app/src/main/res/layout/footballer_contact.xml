<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Foootballer.UIFootballerContact">

    <include
        android:id="@+id/include"
        layout="@layout/activity_base"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextViewfootballerContactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactName_textView"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/footballerContactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:gravity="start" />

                <TextView
                    android:id="@+id/TextViewfootballerContactTelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/TextViewfootballerContactTelf"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/footballerContactTelf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:gravity="start" />

                <TextView
                    android:id="@+id/TextViewfootballerLenguaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/TextViewfootballerLenguaje"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/footballerContactLenguaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:gravity="start" />

                <TextView
                    android:id="@+id/TextViewfootballerContactAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/TextViewfootballerContactAdress"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/footballerContactAdress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:gravity="start" />

            </LinearLayout>

            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_footballer"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/border_footballer"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewfootballerClub"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:text="@string/footballerContactClub_TextView"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_footballer"
                android:padding="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextViewfootballerClubName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactClubName_TextView"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/footballerClubName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"/>

                <TextView
                    android:id="@+id/TextViewfootballerClubAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactClubAlias_TextView"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/footballerClubAlias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"/>

                <TextView
                    android:id="@+id/TextViewfootballerClubContactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactClubContactName_TextView"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/footballerClubContactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp" />
            </LinearLayout>

            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_footballer"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/border_footballer"
                    android:gravity="center"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextViewfootballerClubTeamCare"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:text="@string/footballerContactTeamCareClub_TextView"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_footballer"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextViewfootballerClubTeamCareName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactClubTeamCareName_TextView"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/footballerClubTeamCareName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"/>

                <TextView
                    android:id="@+id/TextViewfootballerClubTeamCareTelecom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactClubTeamCareTelecom_TextView"
                    android:textStyle="bold" />
                    <TextView
                        android:id="@+id/footballerClubTeamCareTelecom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp" />

                <TextView
                    android:id="@+id/TextViewfootballerClubTeamCareNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:text="@string/footballerContactClubContactTeamCareNote_TextView"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/footballerClubTeamCareNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="3dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>